class Car {
  constructor(company, model, year) {
    this.company = company;
    this.model = model;
    this.year = year;
  }
  
  getDescription() {
    return `This is a ${this.year} ${this.company} ${this.model}`;
  }
}

// Example usage:
const car = new Car("Tesla", "Model 3", 2022);
const description = car.getDescription();
console.log(description); // Output: This is a 2022 Tesla Model 3
